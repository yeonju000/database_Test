<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>프로필 필터</title>
  <link href="/css/filter.css" rel="stylesheet" type="text/css">
  <script defer src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
  <script src="/js/filter.js"></script>
</head>
<body>
  <!-- Header Section -->
  <header class="header__container">
    <h1 class="main-title">노긋노긋</h1>
    <div class="header__block">
      <% if (currentUser) { %>
        <a href="/mypage">마이페이지</a>
        <a href="/logout">로그아웃</a>
      <% } else { %>
        <a href="/login">로그인</a>
      <% } %>
    </div>
    <div class="header_nav-main-block">
      <nav class="header__nav-block">
        <ul class="nav__list" role="navigation">
          <li class="nav__list-item">
            <a href="/mainHome" aria-label="노긋노긋 홈페이지">
              <img src="/images/logo.png" width="50px" alt="로고">
            </a>
          </li>
          <li class="nav__list-item"><a href="#">매칭하기</a></li>
          <li class="nav__list-item"><a href="#">채팅</a></li>
          <li class="nav__list-item"><a href="#">보고서작성</a></li>
          <li class="nav__list-item"><a href="#">후기작성</a></li>
          <li class="nav__list-item"><a href="#">보고서확인</a></li>
        </ul>
      </nav>
      <form id="filterForm" method="POST" action="/filter">
        <nav class="chart">
          <ul class="filter-list">
            <li>
              <label for="region">지역:</label>
              <select id="region" name="region">
                <option value="">선택하세요</option>
                <option value="서울특별시">서울특별시</option>
                <option value="부산광역시">부산광역시</option>
                <option value="대구광역시">대구광역시</option>
                <!-- Add more options here -->
              </select>
            </li>
            <li>
              <label for="city">구/군:</label>
              <select id="city" name="city">
                <option value="">선택하세요</option>
              </select>
            </li>
            <li>
              <label for="gender">성별:</label>
              <select id="gender" name="gender">
                <option value="">전체</option>
                <option value="남성">남성</option>
                <option value="여성">여성</option>
              </select>
            </li>
            <li>
              <label for="amount">금액:</label>
              <select id="amount" name="amount">
                <option value="">전체</option>
                <option value="0">무료</option>
                <option value="10000">1만원</option>
                <option value="30000">3만원</option>
                <option value="50000">5만원</option>
              </select>
            </li>
            <li>
              <label for="day">요일:</label>
              <select id="day" name="day">
                <option value="">전체</option>
                <option value="월">월</option>
                <option value="화">화</option>
                <option value="수">수</option>
                <option value="목">목</option>
                <option value="금">금</option>
                <option value="토">토</option>
                <option value="일">일</option>
              </select>
            </li>
            <li>
              <label for="time">시간대:</label>
              <select id="time" name="time">
                <option value="">전체</option>
                <option value="오전">오전</option>
                <option value="오후">오후</option>
                <option value="협의">협의</option>
              </select>
            </li>
            <li><button id="searchButton" type="submit">검색</button></li>
          </ul>
        </nav>
      </form>
    </div>
  </header>
  
  <!-- Footer Section -->
  <footer class="footer__container">
    <section class="pages__container">
      <a href="#">이용약관</a>
      <a href="#">개인정보처리방침</a>
      <a href="#">커뮤니티이용규칙</a>
      <a href="#">문의하기</a>
    </section>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const regionSelect = document.getElementById('region');
      const citySelect = document.getElementById('city');

      const regionData = {
        "서울특별시": ["강남구", "강동구", "강북구", "강서구", "성북구"],
        "부산광역시": ["강서구", "금정구", "기장군", "남구"],
        "대구광역시": ["남구", "달서구", "달성군", "동구"]
        // Add more regions and cities
      };

      regionSelect.addEventListener('change', function() {
        const selectedRegion = this.value;
        citySelect.innerHTML = '<option value="">선택하세요</option>';

        if (selectedRegion && regionData[selectedRegion]) {
          regionData[selectedRegion].forEach(city => {
            const option = document.createElement('option');
            option.value = city;
            option.text = city;
            citySelect.appendChild(option);
          });
        }
      });
    });
  </script>
</body>
</html>
